<resources>
    - <!--  Base application theme.
  -->-

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorBlack</item>
        <item name="android:colorPrimaryDark">@color/colorBlack</item>
        <item name="android:colorAccent">@color/text_blue</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#e5668f</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#ffffff
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#ffffff
        </item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_grey1</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/text_grey1</item>
        <item name="colorControlNormal">@color/text_grey1</item>
        <item name="colorControlActivated">@color/text_grey1</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/margin_15</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="stylePrice">
        <item name="android:textSize">@dimen/margin_8</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>