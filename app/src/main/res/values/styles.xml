<resources xmlns:android="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#e5668f</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#ffffff
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#ffffff
        </item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_grey1</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/text_grey1</item>
        <item name="colorControlNormal">@color/text_grey1</item>
        <item name="colorControlActivated">@color/text_grey1</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/margin_15</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="stylePrice">
        <item name="android:textSize">@dimen/margin_8</item>
    </style>

    <style name="Theme.App.Base" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="checkBoxStyle_filter" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>

    <style name="mytheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
