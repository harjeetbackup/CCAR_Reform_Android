<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_weight="1"
        android:background="@drawable/round_corner_grey"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@mipmap/cross"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:padding="@dimen/margin_10"
                    android:text="Title     :-"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/margin_13"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/margin_13"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@color/text_grey1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llMain"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_60"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="left|center"
                        android:padding="@dimen/margin_5"
                        android:text="Month :-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/margin_13"/>

                    <TextView
                        android:id="@+id/tvMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="left|center"
                        android:padding="@dimen/margin_5"
                        android:text=""
                        android:textSize="@dimen/margin_13"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@color/text_grey1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_60"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="left|center"
                        android:padding="@dimen/margin_5"
                        android:text="Day :-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/margin_13"/>

                    <TextView
                        android:id="@+id/tvDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="left|center"
                        android:padding="@dimen/margin_5"
                        android:text=""
                        android:textSize="@dimen/margin_13"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@color/text_grey1"
                    android:paddingLeft="@dimen/margin_15"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineasdfrLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llMonth"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_60"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="left|center"
                        android:padding="@dimen/margin_5"
                        android:text="Year     :-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/margin_13"/>

                    <TextView
                        android:id="@+id/tvYear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="left|center"
                        android:padding="@dimen/margin_5"
                        android:text=""
                        android:textSize="@dimen/margin_13"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@color/text_grey1"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_60"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:visibility="visible">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_before"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button_selector"
                        android:clickable="false"
                        android:paddingLeft="@dimen/margin_10"
                        android:text="Before sunset"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/margin_13"/>

                    <RadioButton
                        android:id="@+id/rb_after"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:button="@drawable/radio_button_selector"
                        android:clickable="false"
                        android:paddingLeft="@dimen/margin_10"
                        android:text="After sunset"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/margin_13"/>
                </RadioGroup>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
