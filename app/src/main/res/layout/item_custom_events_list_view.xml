<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/round_corner_grey"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCross"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@mipmap/cross"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <com.reformluach.typeface.CustomEditTextRegular
                    android:id="@+id/et_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TITLE"
                    android:imeOptions="actionNext"
                    android:inputType="textNoSuggestions"
                    android:paddingBottom="@dimen/margin_18"
                    android:paddingLeft="@dimen/margin_15"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/margin_15"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llMain"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_45"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:visibility="visible">

                <com.reformluach.utils.HintSpinner
                    android:id="@+id/spMonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/margin_15"
                    android:saveEnabled="false"
                    android:spinnerMode="dropdown"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:layout_marginRight="@dimen/margin_15"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/down"
                    tools:ignore="RtlHardcoded"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@color/text_grey1"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_45"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:layout_marginRight="@dimen/margin_15"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/down"
                    tools:ignore="RtlHardcoded"/>

                <com.reformluach.utils.HintSpinner
                    android:id="@+id/spDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/margin_15"
                    android:saveEnabled="false"
                    android:spinnerMode="dropdown"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@color/text_grey1"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineasdfrLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llMonth"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_45"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:visibility="visible">

                <com.reformluach.utils.HintSpinner
                    android:id="@+id/spYear_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/margin_15"
                    android:saveEnabled="false"
                    android:spinnerMode="dropdown"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:layout_marginRight="@dimen/margin_15"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/down"
                    tools:ignore="RtlHardcoded"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@color/text_grey1"/>

                <com.reformluach.utils.HintSpinner
                    android:id="@+id/spYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/margin_15"
                    android:saveEnabled="false"
                    android:spinnerMode="dropdown"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_60"
                android:layout_weight="1"
                android:visibility="visible">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_before"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button_selector"
                        android:paddingLeft="@dimen/margin_10"
                        android:text="Before sunset"
                        android:textColor="@color/colorBlack"/>

                    <RadioButton
                        android:id="@+id/rb_after"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:button="@drawable/radio_button_selector"
                        android:paddingLeft="@dimen/margin_10"
                        android:text="After sunset"
                        android:textColor="@color/colorBlack"/>
                </RadioGroup>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/viewBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/text_grey1"/>
</LinearLayout>