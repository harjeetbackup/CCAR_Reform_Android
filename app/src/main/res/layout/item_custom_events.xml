<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/margin_15"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_in_mail_edittext_dwrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel">

            <com.reformluach.typeface.CustomEditTextRegular
                android:id="@+id/sign_in_mail_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="EVENT TYPE"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:paddingBottom="@dimen/margin_18"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/margin_15"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_in_mail_edittext_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel">

            <com.reformluach.typeface.CustomEditTextRegular
                android:id="@+id/sd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TITLE"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:paddingBottom="@dimen/margin_18"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/margin_15"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llMain"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_45"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:visibility="visible">

            <com.reformluach.utils.HintSpinner
                android:id="@+id/spMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="left|center"
                android:paddingLeft="@dimen/margin_15"
                android:saveEnabled="false"
                android:spinnerMode="dropdown"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_15"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/down"
                tools:ignore="RtlHardcoded"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/text_grey"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_45"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:visibility="visible">

            <com.reformluach.utils.HintSpinner
                android:id="@+id/spYear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="left|center"
                android:paddingLeft="@dimen/margin_15"
                android:saveEnabled="false"
                android:spinnerMode="dropdown"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_15"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/down"
                tools:ignore="RtlHardcoded"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/text_grey"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llMonth"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_45"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:visibility="visible">

            <com.reformluach.utils.HintSpinner
                android:id="@+id/spDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="left|center"
                android:paddingLeft="@dimen/margin_15"
                android:saveEnabled="false"
                android:spinnerMode="dropdown"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_15"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/down"
                tools:ignore="RtlHardcoded"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/text_grey"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_60"
            android:layout_weight="1"
            android:visibility="visible">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_button_selector"
                    android:text="Before sunset"
                    android:textColor="@color/colorBlack"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:button="@drawable/radio_button_selector"
                    android:text="After sunset"
                    android:textColor="@color/colorBlack"/>
            </RadioGroup>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/colorBlack"/>
</LinearLayout>