<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
    <LinearLayout
        android:id="@+id/llMainCalender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_year_calensync"
        android:orientation="vertical"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            >

            <com.reformluach.typeface.CustomtextViewFontLight
                android:id="@+id/txtCalenderSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar Sync"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/margin_33"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <ImageButton
                android:id="@+id/ImgBtnSettingCalender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/reform_setting_icon"
                android:layout_gravity="left"
                android:background="@color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_12"
                />
            <TextView
                android:id="@+id/txtCalenderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="R"
                android:textSize="@dimen/calender_description_text_size"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/margin_26"
                android:layout_marginTop="@dimen/margin_13"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <com.reformluach.typeface.CustomtextViewFontRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="@dimen/margin_10"
            android:text="@string/calender_text"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/calender_type_text_size"
            />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/margin_10"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvYear"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:scrollbars="horizontal"
                />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"

        />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >
    <Button
        android:id="@+id/btnDownloadEvents"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_download_height"
        android:layout_below="@+id/rvEvents"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_80"
        android:layout_marginRight="@dimen/margin_80"
        android:text="Download"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="@dimen/margin_18"
        android:background="@drawable/download_btn_shape"
        android:drawableRight="@mipmap/download_icon"
        android:drawablePadding="-11dp"
        android:paddingRight="22dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"

        />


    </LinearLayout>

</RelativeLayout>
