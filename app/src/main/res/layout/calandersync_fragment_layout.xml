<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg_bottom">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"

        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            >

            <com.reformluach.typeface.CustomtextViewFontLight
                android:id="@+id/txtCalenderSync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Calendar Sync"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/margin_35"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ImgBtnSettingCalender"

                />

            <ImageButton
                android:id="@+id/ImgBtnSettingCalender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/reform_setting_icon"
                android:layout_gravity="left"
                android:background="@color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/txtCalenderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="R"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="23dp"
                android:layout_marginTop="12dp"

                />
        </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

    <com.reformluach.typeface.CustomtextViewFontRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="@dimen/margin_10"
            android:text="@string/calender_text"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvYear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:scrollbars="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/margin_12"
            />


    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llMain"
        android:layout_marginTop="20dp"

        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"

        />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >
    <Button
        android:id="@+id/btnDownloadEvents"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/rvEvents"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_80"
        android:layout_marginRight="@dimen/margin_80"
        android:text="Download"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="@dimen/margin_18"
        android:background="@drawable/download_btn_shape"
        android:drawableRight="@mipmap/download_icon"
        android:drawablePadding="-11dp"
        android:paddingRight="22dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"

        />
    </LinearLayout>

</RelativeLayout>
